
<style>
  
    .assignment-card {
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 20px 0;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

        .assignment-card header {
            background: #007bff;
            color: #ffffff;
            padding: 15px;
            text-align: center;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }

        .assignment-card .info {
            padding: 20px;
        }

            .assignment-card .info h2 {
                margin-top: 0;
                font-size: 24px;
            }

            .assignment-card .info p {
                margin-bottom: 5px;
            }

    .countdown {
        font-size: 18px;
        text-align: center;
        margin-bottom: 15px;
    }

    .button {
        display: block;
        width: 100px;
        margin: 15px auto 0;
        padding: 10px 15px;
        text-decoration: none;
        text-align: center;
        color: #fff;
        background-color: #007bff;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .button:hover {
            background-color: #0056b3;
        }
</style>

<div class="main">

    <div class="assignment-card">
        <header>
            <h2>Ödev 1</h2>
        </header>
        <div class="info">
            <h2>Matematik Ödevi</h2>
            <p>Son Teslim Tarihi: 25 Mart 2024</p>
            <div class="countdown" id="countdown1">24 gün 12 saat 30 dakika kaldı</div>
            <a href="@Url.Action("Ekle", "Odev")" class="button">Ödevi Ekle</a> 
        </div>
    </div>

    <div class="assignment-card">
        <header>
            <h2>Ödev 2</h2>
        </header>
        <div class="info">
            <h2>Fizik Ödevi</h2>
            <p>Son Teslim Tarihi: 30 Mart 2024</p>
            <div class="countdown" id="countdown2">29 gün 5 saat 45 dakika kaldı</div>
            <a href="@Url.Action("Ekle", "Odev")" class="button">Ödevi Ekle</a> 
        </div>
    </div>

 
    <div class="contact-card">
        <header>
            <h2>İletişim Bilgileri</h2>
        </header>
        <div class="info">
            <p>Öğretmen Adı: Ahmet Yılmaz</p>
            <p>E-posta: ahmet.yilmaz@ornek.edu.tr</p>
            <p>Telefon: +90 123 456 7890</p>
        </div>
    </div>
</div>

<script>
    
    var countDownDate = new Date("Mar 25, 2024 00:00:00").getTime(); 
    var x = setInterval(function () {
        var now = new Date().getTime();
        var distance = countDownDate - now;

        var days = Math.floor(distance / (1000 * 60 * 60 * 24));
        var hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        var seconds = Math.floor((distance % (1000 * 60)) / 1000);

        document.getElementById("countdown1").innerHTML = days + " gün " + hours + " saat " + minutes + " dakika " + seconds + " saniye kaldı";

        if (distance < 0) {
            clearInterval(x);
            document.getElementById("countdown1").innerHTML = "Süre doldu!";
        }
    }, 1000);
</script>

